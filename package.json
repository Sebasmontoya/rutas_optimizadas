{
    "name": "cm-nys-dev",
    "version": "1.0.0",
    "main": "dist/index.js",
    "description": "Proyecto que contiene el backend de nys",
    "license": "UNLICENSED",
    "private": true,
    "author": {
        "email": "it@coordinadora.com",
        "name": "Coordinadora Mercantil S.A"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier --write \"./src/**/*.ts\"",
        "format-check": "prettier --list-different \"./src/**/*.ts\"",
        "dev": "tsc-watch -p tsconfig.build.json --onSuccess \"yarn start-lint-dev\"",
        "start": "node dist/index.js",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/index.js\"",
        "test": "jest --color --verbose --no-cache",
        "coverage": "jest --coverage",
        "release": "standard-version",
        "husky:install": "husky install",
        "start-lint-dev": "yarn lint && reset && node dist/index.js"
    },
    "dependencies": {
        "@google-cloud/firestore": "4.13.2",
        "@google-cloud/pubsub": "^4.0.0",
        "@mgcrea/fastify-request-logger": "^1.1.1",
        "@mgcrea/pino-pretty-compact": "^1.3.0",
        "@types/named-routes": "^2.0.1",
        "axios": "^1.4.0",
        "date-fns": "^2.30.0",
        "dotenv": "^16.3.1",
        "fastify": "^3.29.5",
        "fastify-cors": "^6.0.2",
        "fastify-formbody": "^5.0.0",
        "fastify-helmet": "^5.3.2",
        "fastify-log": "^1.2.2",
        "inversify": "5.1.1",
        "joi": "17.4.1",
        "module-alias": "2.2.2",
        "named-routes": "^2.0.7",
        "pg-promise": "^11.5.3",
        "reflect-metadata": "0.1.13",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@commitlint/cli": "16.2.4",
        "@commitlint/config-conventional": "16.2.4",
        "@types/got": "^9.6.12",
        "@types/jest": "27.4.1",
        "@types/node": "17.0.29",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "5.21.0",
        "@typescript-eslint/parser": "5.21.0",
        "eslint": "8.14.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "mock-cloud-firestore": "^0.12.0",
        "prettier": "2.6.2",
        "rimraf": "3.0.2",
        "standard-version": "9.3.2",
        "ts-jest": "27.1.4",
        "ts-node": "10.7.0",
        "tsc-watch": "5.0.3",
        "jest-junit": "^10.0.0",
        "typescript": "5.1.5"
    },
    "_moduleAliases": {
        "@common": "dist/common",
        "@modules": "dist/modules",
        "@application": "dist/application",
        "@domain": "dist/domain",
        "@infrastructure": "dist/infrastructure",
        "@configuration": "dist/configuration",
        "@util": "dist/util",
        "@app": "dist/app"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && yarn lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "yarn format",
            "yarn lint --fix"
        ]
    }
}
